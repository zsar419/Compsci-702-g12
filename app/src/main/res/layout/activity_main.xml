<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.uoa.compsci_702_g12.MainActivity">

    <Button
        android:text="@string/international_option"
        android:id="@+id/international_students_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_option_height"
        android:layout_alignParentTop="true" />

    <Button
        android:text="@string/research_option"
        android:id="@+id/research_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_option_height"
        android:layout_below="@id/international_students_btn" />

    <Button
        android:text="@string/tutor_option"
        android:id="@+id/tutoring_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_option_height"
        android:layout_below="@+id/research_btn" />

    <Button
        android:text="@string/view_buddies"
        android:id="@+id/show_buddies_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>

</RelativeLayout>
